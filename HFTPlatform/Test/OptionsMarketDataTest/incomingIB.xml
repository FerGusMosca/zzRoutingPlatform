<?xml version="1.0" encoding="utf-8" ?>
<Configuration>
  <Name>Incoming IB</Name>
  <!--Para los archivos de logs-->
  <Active>true</Active>
  <IP>localhost</IP>
  <Port>7496</Port>
  <IdIBClient>12</IdIBClient>

  <AccessLayerConnectionString>metadata=res://*/AutPortfolioEntityDataModel.csdl|res://*/AutPortfolioEntityDataModel.ssdl|res://*/AutPortfolioEntityDataModel.msl;provider=System.Data.SqlClient;provider connection string=&quot;data source=.\SQLDEV;initial catalog=AutPortfolio;integrated security=True;multipleactiveresultsets=True;App=EntityFramework&quot;</AccessLayerConnectionString>

  <OptionsConverter>zHFT.OptionsMarketClient.USA.Common.Converter.OptionConverter, zHFT.OptionsMarketClient.USA.Common</OptionsConverter>
  
  <PublishUpdateInMilliseconds>1000</PublishUpdateInMilliseconds><!--1 segundos-->
  <SecurityUpdateInHours >24</SecurityUpdateInHours ><!--24 horas-->

  <!--Currency and Security Type-->
  <Currency>USD</Currency>
  <SecType>OPT</SecType>
  <Exchange>SMART</Exchange>
  
  
  <!--Time of day to update contract List-->
  <MarketStartTime>10:30:00</MarketStartTime>
  <MarketEndTime>17:00:00</MarketEndTime>
  
  <!--Options Filtering Options-->
  <ContractFilter>zHFT.OptionsMarketClient.DemoFilters.Common.Filters.DemoContractFilter, zHFT.OptionsMarketClient.DemoFilters.Common</ContractFilter>
  <MinMaturityDistanceInMonths>1</MinMaturityDistanceInMonths>
  <MaxMaturityDistanceInMonths>3</MaxMaturityDistanceInMonths>
  <StrStrikeFilter>I</StrStrikeFilter><!--I=ITM,O=OTM,A=All-->
  <StrPutOrCall>C</StrPutOrCall><!--C=CALL,P=PUT,A=ALL-->
  <MaxContractsPerSecurity>10</MaxContractsPerSecurity>
  <MaxContractsInSession>100</MaxContractsInSession>
  <ForceContractRecovery>false</ForceContractRecovery>
  
</Configuration>