<DayTurtlesConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Name>Strategy Handler - TurtlesDayTrading</Name>

  <OpenWindow>20</OpenWindow>
  <CloseWindow>10</CloseWindow>

  <PositionSizeInCash>100</PositionSizeInCash>

  <MaxOpenedPositions>4</MaxOpenedPositions>
  <StopLossForOpenPositionPct>1</StopLossForOpenPositionPct><!--1=1%-->
