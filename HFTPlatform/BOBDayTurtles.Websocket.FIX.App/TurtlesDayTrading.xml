<?xml version="1.0" encoding="utf-8" ?>
<Configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Name>BOBDayTurtles.Websocket.FIX.App</Name>
  

  <PositionSizeInCash>1000</PositionSizeInCash>

  <MaxOpenedPositions>6</MaxOpenedPositions>
  <StopLossForOpenPositionPct>1</StopLossForOpenPositionPct><!--1=1%-->
  <FeeTypePerTrade>Nominal</FeeTypePerTrade><!--OrderRouter,Nominal,Percentage-->
  <FeeValuePerTrade>0</FeeValuePerTrade>
  <DecimalRounding>3</DecimalRounding>
  
  <InnerTrendlinesSpan>120</InnerTrendlinesSpan><!--in candles-->
  <OuterTrendlinesSpan>60</OuterTrendlinesSpan><!--in candles-->
  <PerforationThresholds>0.0005</PerforationThresholds><!--in pct 0-1-->

  <TradingMode>LIVE_MODE</TradingMode><!--BACKTEST,LIVE_MODE-->
  <Account>9732</Account>

  <Currency>ARS</Currency>
  <Exchange>BUE</Exchange>
  <SecurityTypes>CS</SecurityTypes>  <!--CS=Common Stock, CC= Cryptocurrency,TBOND= Bond-->

  <ClosingTime>08:51 PM</ClosingTime>

  <OrderRouter>zHFT.OrderRouters.Router.OrderRouter, zHFT.OrderRouters</OrderRouter>

  <OrderRouterConfigFile>.\GenOrderRouter.xml</OrderRouterConfigFile>

  <ConnectionString>Data Source=.\SQLDEV;initial catalog=daily_turtles_dev;integrated security=True;multipleactiveresultsets=True</ConnectionString>

  <ResetOnPersistance>true</ResetOnPersistance>

  <CancelActiveOrdersOnStart>false</CancelActiveOrdersOnStart>

<CandleReferencePrice>TRADE</CandleReferencePrice>
<!-- IMPORTANT: bacause candle CLOSE prices do not always have, the candle close -->


	<OnlyLong>false</OnlyLong>

  <RecalculateTrendlines>true</RecalculateTrendlines>

  <HistoricalPricesPeriod>-7</HistoricalPricesPeriod><!---4= -4 days-->

	<SkipCandlesToBreakTrndln>1</SkipCandlesToBreakTrndln>
	<!--0=No Skip-->

  <SaveEvery>HOUR</SaveEvery>
  <!--HOUR,_10MIN,_30MIN-->

	<ExitOnMMov>true</ExitOnMMov>
	<!--Close window is mmov-->
  
  <StocksToMonitor>
    <Symbol>GGAL</Symbol>
	<Symbol>YPFD</Symbol>
	<Symbol>BBAR</Symbol>
	<Symbol>BMA</Symbol>
	<Symbol>COME</Symbol>
	<Symbol>SUPV</Symbol>
	  
<!--    -->
  </StocksToMonitor>

</Configuration>