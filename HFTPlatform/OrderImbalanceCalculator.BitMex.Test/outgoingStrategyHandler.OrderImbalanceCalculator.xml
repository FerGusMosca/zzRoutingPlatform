<?xml version="1.0" encoding="utf-8" ?>
<Configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Name>Strategy Handler - Order Imbalance Calculator - BitMex</Name>

  <PositionSizeInCash>20</PositionSizeInCash>
  <MaxOpenedPositions>5</MaxOpenedPositions>
  <PositionOpeningImbalanceThreshold>0.7</PositionOpeningImbalanceThreshold>
  <PositionOpeningImbalanceMaxThreshold>0.55</PositionOpeningImbalanceMaxThreshold>
  <StopLossForOpenPositionPct>0.5</StopLossForOpenPositionPct><!--1=1%-->
  <FeeTypePerTrade>Percentage</FeeTypePerTrade><!--OrderRouter,Nominal,Percentage-->
  <FeeValuePerTrade>0.15</FeeValuePerTrade>
  
  <ActiveBlocks>3</ActiveBlocks>
  <BlockSizeInMinutes>10</BlockSizeInMinutes>

  <Currency>USD</Currency>
  <Exchange>BITMEX</Exchange>
  <SecurityTypes>FUT</SecurityTypes><!--CS=Common Stock, CC= Cryptocurrency-->

  <OrderRouter>zHFT.OrderRouters.Router.OrderRouter, zHFT.OrderRouters</OrderRouter>

  <OrderRouterConfigFile>.\outgoingOrderRouter.xml</OrderRouterConfigFile>

  <ConnectionString>Data Source=.\SQLDEV;initial catalog=BOBIntFigCryptoMetrics;integrated security=True;multipleactiveresultsets=True</ConnectionString>

  <ResetOnPersistance>true</ResetOnPersistance>

  <SaveEvery>HOUR</SaveEvery>
  <!--HOUR,_10MIN,_30MIN-->
  
  <StocksToMonitor>
    
    <Symbol>XBTU19</Symbol>
    <Symbol>XBTZ19</Symbol>
    <Symbol>ADAU19</Symbol>
    <Symbol>BCHU19</Symbol>
    <Symbol>EOSU19</Symbol>
    <Symbol>ETHU19</Symbol>
    <Symbol>LTCU19</Symbol>
    <Symbol>TRXU19</Symbol>
    <Symbol>XRPU19</Symbol>
  </StocksToMonitor>

</Configuration>