  <DecimalRounding>3</DecimalRounding>

  <Currency>ARS</Currency>
  <Exchange>BUE</Exchange>
  <SecurityTypes>CS</SecurityTypes><!--CS=Common Stock, CC= Cryptocurrency-->

  <!--<Currency>USD</Currency>
