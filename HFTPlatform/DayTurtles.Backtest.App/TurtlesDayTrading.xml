<?xml version="1.0" encoding="utf-8" ?>
<DayTurtlesConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Name>Daily_Turtles_Backtest</Name>

  <OpenWindow>40</OpenWindow>
  <CloseWindow>200</CloseWindow>

  <PositionSizeInCash>1000</PositionSizeInCash>

  <MaxOpenedPositions>6</MaxOpenedPositions>
  <StopLossForOpenPositionPct>1</StopLossForOpenPositionPct><!--1=1%-->
  <FeeTypePerTrade>Nominal</FeeTypePerTrade><!--OrderRouter,Nominal,Percentage-->
  <FeeValuePerTrade>0</FeeValuePerTrade>
  <DecimalRounding>3</DecimalRounding>

  <Account>9732</Account>

  <Currency>USD</Currency>
  <Exchange>BUE</Exchange>
  <SecurityTypes>CS</SecurityTypes>  <!--CS=Common Stock, CC= Cryptocurrency,TBOND= Bond-->



	<OpeningTime>11:30 AM</OpeningTime>
  <ClosingTime>05:51 PM</ClosingTime>

	<OrderRouter>zHFT.OrderRouters.Router.MarketOrderRouter, zHFT.OrderRouters</OrderRouter>

  <OrderRouterConfigFile>.\GenOrderRouter.xml</OrderRouterConfigFile>

  <ConnectionString>Data Source=.\SQLDEV17;initial catalog=daily_turtles;integrated security=True;multipleactiveresultsets=True</ConnectionString>

  <ResetOnPersistance>true</ResetOnPersistance>

  <CancelActiveOrdersOnStart>false</CancelActiveOrdersOnStart>
  
  <CandleReferencePrice>TRADE</CandleReferencePrice> <!-- IMPORTANT: bacause canle CLOSE prices do not always have, the candle close -->

  <OnlyLong>false</OnlyLong>

  <SaveEvery>HOUR</SaveEvery>
  <!--HOUR,_10MIN,_30MIN-->

    <ExitOnMMov>true</ExitOnMMov>
    <!--Close window is mmov-->

  <StocksToMonitor>

    <!--<Symbol>BTC</Symbol>-->
	  <Symbol>SUPV</Symbol>
	  <Symbol>BBAR</Symbol>
